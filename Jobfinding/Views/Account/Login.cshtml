@using Jobfinding.Data.ViewModels
@model LoginVM

@{
    ViewData["Title"] = "Log in to your account";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
        color: #333;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-form {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 400px;
    }

        .login-form h4 {
            font-weight: bold;
            color: #007bff;
            margin-bottom: 20px;
        }

        .login-form .form-group label {
            font-weight: bold;
            color: #333;
        }

        .login-form .form-control {
            border: 1px solid #ced4da;
            border-radius: 4px;
            color: #333;
        }

        .login-form .text-danger {
            color: #dc3545;
        }

        .login-form .btn-success {
            background-color: #007bff;
            color: #ffffff;
            border-color: #007bff;
            font-weight: bold;
            padding: 10px 20px;
            font-size: 16px;
            width: 100%;
            transition: background-color 0.3s;
        }

            .login-form .btn-success:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .login-form .btn-secondary {
            background-color: #6c757d;
            color: #ffffff;
            border-color: #6c757d;
            font-weight: bold;
            padding: 10px 20px;
            font-size: 16px;
            width: 100%;
            transition: background-color 0.3s;
        }

            .login-form .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 4px;
    }
</style>

<div class="login-container">
    <div class="login-form">
        <h4>Log in to your account</h4>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <b>Sorry!</b> - @TempData["Error"]
            </div>
        }

        <form asp-action="Login" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12">
                <label asp-for="EmailAddress" class="form-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="d-grid">
                    <input type="checkbox" id="rememberMe" name="RememberMe" class="form-check-input" value="true" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
            </div>

            <div class="col-12">
                <div class="d-grid">
                    <input type="submit" value="Log in" class="btn btn-success" />
                </div>
            </div>

            <div class="col-12">
                <div class="d-grid">
                    <a class="btn btn-secondary" asp-controller="Findjobs" asp-action="Index">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
