@model NewFindjobsVM
@using Jobfinding.Data;
@using Jobfinding.Data.Enums;

@{
    ViewData["Title"] = "Create a New Requirement";
}

<style>
    .form-container {
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 5px;
    }

    .form-title {
        margin-bottom: 20px;
        font-size: 24px;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 500;
    }

    .form-control {
        height: 40px;
    }

    .img-preview-container {
        margin-top: 20px;
    }

    .img-preview {
        max-width: 100%;
        height: auto;
    }

    .btn-create {
        background-color: #28a745;
        color: #fff;
    }

    .btn-show-all {
        background-color: #6c757d;
        color: #fff;
    }
</style>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="form-container">

            <h4 class="form-title">Create a New Recruitment</h4>


            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">

                            <label asp-for="Name" class="form-label">Job Name</label>

                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Startdate" class="form-label">Start Date</label>
                            <input asp-for="Startdate" type="date" class="form-control" />
                            <span asp-validation-for="Startdate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Enddate" class="form-label">End Date</label>
                            <input asp-for="Enddate" type="date" class="form-control" />
                            <span asp-validation-for="Enddate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary" class="form-label">Salary</label>
                            <input asp-for="Salary" type="number" class="form-control" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageURL" class="form-label">Image URL</label>
                            <input asp-for="ImageURL" class="form-control" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="JobsId" class="form-label">Job Type</label>

                            <select asp-for="JobsId" class="form-control" asp-items="ViewBag.Jobs"></select>
                            <span asp-validation-for="JobsId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="JobCategory" class="form-label">Job Category</label>
                            <select asp-for="JobCategory" class="form-control" asp-items="Html.GetEnumSelectList<JobCategory>()"></select>
                            <span asp-validation-for="JobCategory" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <label asp-for="CompanyId" class="form-label">Company Name</label>

                            <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.Companys"></select>
                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <label asp-for="SkillIds" class="form-label">Required Skills</label>

                            <select asp-for="SkillIds" class="form-control" asp-items="ViewBag.Skills" multiple></select>
                            <span asp-validation-for="SkillIds" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="img-preview-container">
                    <label class="form-label">Image Preview</label>
                    <div class="text-center">
                        <img id="ImageUrlPreview" class="img-preview" />
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-create float-right" />
                    <a class="btn btn-show-all" asp-action="Index">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        });
    </script>
}
